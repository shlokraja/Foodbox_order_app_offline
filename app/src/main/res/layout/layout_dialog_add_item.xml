<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5sdp">


    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_160sdp"
        android:background="@color/color_grey"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ibMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_minus_round" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@null"
            android:enabled="false"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/font_60" />

        <ImageButton
            android:id="@+id/ibPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_plus_round" />

    </LinearLayout>

    <!--<TextView
        android:visibility="gone"
        android:id="@+id/tvRemoveItemNotice"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:text="@string/this_will_remove_items_if_exists"
        android:textColor="@color/color_text_green"
        android:textSize="@dimen/font_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRemoveItemNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:text="@string/this_will_remove_items_if_exists"
            android:textAllCaps="true"
            android:textColor="@color/color_text_default_dark"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/color_text_default_dark"
                android:textSize="@dimen/font_20" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/confirm"
                android:textAllCaps="true"
                android:textColor="@color/color_text_default_dark"
                android:textSize="@dimen/font_20" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
