<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/_400sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/drawable_border_round_black"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/checkout"
                android:textAllCaps="true"
                android:textColor="@color/color_text_green"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llSuccessfull"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/tvCheckOut"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/drawable_border_black"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your order no. 6 was successfull !"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/font_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvProceedPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Please Proceed the payment! $ 90"
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llClosing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/llSuccessfull"
                android:background="@drawable/drawable_border_black"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Closing in 5 seconds..."
                    android:textColor="@color/color_text_green"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvOrderDownText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llClosing"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="Please enjoy your meal !"
                android:textColor="@color/color_text_green"
                android:textSize="@dimen/font_20"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>
</layout>