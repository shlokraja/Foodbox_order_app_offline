<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="1dip" android:color="@color/color_grey_dark" />
            <solid android:width="1dip" android:color="@color/color_grey_dark" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="1dip" android:color="@color/color_grey_dark" />
            <solid android:width="1dip" android:color="@color/color_grey_dark" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_3sdp" />
            <stroke android:width="1dip" android:color="@color/color_red"  />
            <solid android:width="1dip" android:color="@color/color_red" />
        </shape>
    </item>
</selector>